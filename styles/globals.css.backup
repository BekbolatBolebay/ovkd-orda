/* Tailwind 4 негізгі импорттары */
@import "tailwindcss";
@import "@tailwindcss/forms";
@import "@tailwindcss/typography";
@import "@tailwindcss/aspect-ratio";
@import "@tailwindcss/container-queries";

/* Көлеңке, түс, фон секілді кастом айнымалылар */
@theme inline {
  --color-background: oklch(1 0 0);
  --color-foreground: oklch(0.15 0 0);
  --color-primary: oklch(0.65 0.25 250);
  --color-secondary: oklch(0.7 0.15 210);
  --color-muted: oklch(0.95 0 0);
  --radius: 1rem;
  --font-sans: "Inter", system-ui, sans-serif;
}

/* Dark mode түстері */
@variant dark {
  :root {
    --color-background: oklch(0.1 0 0);
    --color-foreground: oklch(0.95 0 0);
    --color-primary: oklch(0.75 0.2 250);
    --color-secondary: oklch(0.7 0.15 200);
  }
}

/* Негізгі бет стилі */
html, body {
  @apply bg-[--color-background] text-[--color-foreground] font-sans;
  margin: 0;
  padding: 0;
  scroll-behavior: smooth;
}

/* Контейнер */
.container {
  @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
}

/* Анимация мысалы */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fadeIn {
  animation: fadeIn 0.6s ease-in-out both;
}

/* Батырма стилі */
.btn {
  @apply inline-flex items-center justify-center rounded-2xl px-4 py-2 text-sm font-semibold shadow-md transition-all;
  @apply bg-[--color-primary] text-white hover:opacity-90 active:scale-95;
}

/* Карточка стилі */
.card {
  @apply bg-[--color-muted] rounded-2xl shadow-lg p-6 transition-all hover:shadow-xl;
}

/* Input және textarea */
input, textarea, select {
  @apply border border-gray-300 rounded-xl p-2 focus:outline-none focus:ring-2 focus:ring-[--color-primary];
}

/* Scrollbar (жеке стиль) */
::-webkit-scrollbar {
  width: 10px;
}
::-webkit-scrollbar-track {
  background: #f1f1f1;
}
::-webkit-scrollbar-thumb {
  background: #888;
  border-radius: 5px;
}
::-webkit-scrollbar-thumb:hover {
  background: #555;
}
